<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Cart</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card {
            margin: 15px;
        }
        .container {
            padding: 20px;
        }
        .btn-custom {
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="mb-4">Your Cart</h1>
        <div class="row">
            <% Cratitem.forEach((val, i) => { %>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="../<%= val.image %>" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title"><%= val.productName %></h5>
                            <p class="card-text text-muted">Price: $<%= val.price %></p>
                            <p class="card-text">Quantity: <%= val.qty %></p>
                            <p class="card-text"><%= val.description %></p>
                            <div class="d-flex justify-content-center">
                                <a href="#" class="btn btn-success btn-custom">Buy Now</a>
                                <a href="/product/deletecart?id=<%= val.id %>" class="btn btn-danger btn-custom">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="mt-4">
            <a href="/Product/viewProduct" class="btn btn-primary">View All Products</a>
        </div>
    </div>
    <!-- Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
