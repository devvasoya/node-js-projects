<%- include('header') %>

  <div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Tables</h4>
          <div class="ms-auto text-end">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  Library
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Start Page Content -->
      <!-- ============================================================== -->
      <div class="row">

        <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title mb-0">Static Table</h5>
                  </div>
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Category_No</th>
                        <th scope="col">Category_Name</th>
                        <th scope="col">Subcategory</th>
                        <th scope="col">Exubcategory</th>
                        <th scope="col">Description</th>
                        <th scope="col">price</th>
                        <th scope="col">image</th>
                        <th scope="col">Actions</th>
                        <th scope="col">Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% product.map((pr,i) => { %>
                        <tr>
                          <td><%= ++i %></td>
                          <td>
                            <%= pr.categoryId.category_name %>
                          </td>
                          <td>
                            <%= pr.subcategoryId.subcategory %>
                          </td>
                          <td>
                            <%= pr.exsubcategoryId.exsubcategory %>
                          </td>
                          <td>
                            <%= pr.description %>
                          </td>
                          <td>
                            <%= pr.price %>
                          </td>
                          <td>
                            <img src="/<%= pr.image %>"  width="100" />
                          </td>
                          <td>
                            <a class="btn btn-danger me-2" href="/product/deleteproduct?id=<%= pr.id %>">Delete</a>
                            <a class="btn btn-info" href="/product/editexproduct?id=<%= pr.id %>">Edit</a>
                          </td>
                          <td>
                            <% if(pr.status == "active" ) { %>
                              <a href="/product/changestatus?id=<%= pr.id %>&status=<%= pr.status %>" class="btn btn-success">
                                <%= pr.status %>
                              </a>
                              <% } else { %>
                                <a href="/product/changestatus?id=<%= pr.id %>&status=<%= pr.status %>" class="btn btn-warning">
                                  <%= pr.status %>
                                </a>
                                <% } %>
                          </td>
                        </tr>
                    <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
      </div>
      <!-- ============================================================== -->
      <!-- End Container fluid  -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- footer -->
      <!-- ============================================================== -->
      <footer class="footer text-center">
        All Rights Reserved by Matrix-admin. Designed and Developed by
        <a href="https://www.wrappixel.com">WrapPixel</a>.
      </footer>
      <!-- ============================================================== -->
      <!-- End footer -->
      <!-- ============================================================== -->
    </div>

    <%- include('footer') %>